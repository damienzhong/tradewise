<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.damien.tradewise.admin.mapper.TwAdminMapper">

    <resultMap id="TwAdminResultMap" type="com.damien.tradewise.admin.entity.TwAdmin">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="nickName" column="nick_name"/>
        <result property="email" column="email"/>
        <result property="phone" column="phone"/>
        <result property="role" column="role"/>
        <result property="enabled" column="enabled"/>
        <result property="lastLoginTime" column="last_login_time"/>
        <result property="lastLoginIp" column="last_login_ip"/>
        <result property="loginCount" column="login_count"/>
        <result property="createdBy" column="created_by"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="findByUsername" resultMap="TwAdminResultMap">
        SELECT * FROM tw_admins WHERE username = #{username}
    </select>

    <select id="findByEmail" resultMap="TwAdminResultMap">
        SELECT * FROM tw_admins WHERE email = #{email}
    </select>

    <select id="findById" resultMap="TwAdminResultMap">
        SELECT * FROM tw_admins WHERE id = #{id}
    </select>

    <select id="findAll" resultMap="TwAdminResultMap">
        SELECT * FROM tw_admins ORDER BY created_at DESC
    </select>

    <insert id="insert" parameterType="com.damien.tradewise.admin.entity.TwAdmin"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO tw_admins (
            username, password, nick_name, email, phone, role, enabled, created_by
        ) VALUES (
            #{username}, #{password}, #{nickName}, #{email}, #{phone}, #{role}, #{enabled}, #{createdBy}
        )
    </insert>

    <update id="update" parameterType="com.damien.tradewise.admin.entity.TwAdmin">
        UPDATE tw_admins
        <set>
            <if test="nickName != null">nick_name = #{nickName},</if>
            <if test="email != null">email = #{email},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="enabled != null">enabled = #{enabled},</if>
        </set>
        WHERE id = #{id}
    </update>

    <update id="updateLoginInfo">
        UPDATE tw_admins
        SET last_login_time = NOW(),
            last_login_ip = #{loginIp},
            login_count = login_count + 1
        WHERE id = #{id}
    </update>

    <update id="updatePassword">
        UPDATE tw_admins
        SET password = #{password}
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM tw_admins WHERE id = #{id}
    </delete>

</mapper>
